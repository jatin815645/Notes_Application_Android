<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp"
        >

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/notesSubtitle"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="jdhfjsd jfjsdfhjsjkfj jdfdfjf fiefjkfnjjif jefkefknmnc vndsfnnvjvndvnjndvjdnvjdnvj djvnjdvjnvjdjvjbjvbdsjvdsjkvhjfvjbjfvbfvjjdnvjdjvhdgnfkjvijorgjknvknjvvhrgrgrgnncmcvnd"
                android:textColor="#D8D8D8"

                />

            <TextView
                android:id="@+id/notesDate"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="7 August 2024"
                android:textColor="@color/white"
                android:textStyle="bold"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>